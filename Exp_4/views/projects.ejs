<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Projects | <%= student.name %></title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/projects" class="active">Projects</a>
      <a href="/contact">Contact</a>
    </nav>
  </header>

  <section class="content">
    <h1>My Projects</h1>
    <div class="projects">
      <% student.projects.forEach(p => { %>
        <div class="card">
          <h3><%= p.name %></h3>
          <p><%= p.desc %></p>
        </div>
      <% }) %>
    </div>
  </section>

  <footer>
    <p>Â© <%= new Date().getFullYear() %> <%= student.name %></p>
  </footer>
</body>
</html>
